generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Project {
  id                    Int       @id @default(autoincrement())
  title                 String
  cover_url             String
  medias_url            Media[]
  description           String
  stacks                Stack[]
  objectives            Objective[]
  project_link          String
  repo_link             String
  slug                  String    @unique
  createdAt             DateTime  @default(now())
 }

   model Media {
  id        Int       @id @default(autoincrement())
  url       String
  project   Project   @relation(fields: [projectId], references: [id])
  projectId Int
 }

  model Stack {
  id        Int       @id @default(autoincrement())
  name      String
  project   Project   @relation(fields: [projectId], references: [id])
  projectId Int
 }

  model Objective {
  id        Int       @id @default(autoincrement())
  name      String
  project   Project   @relation(fields: [projectId], references: [id])
  projectId Int
 }