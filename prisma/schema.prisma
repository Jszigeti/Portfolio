generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Project {
  id        Int       @id @default(autoincrement())
  title     String
  cover     String
  imgs      Img[]
  desc      String
  stacks    Stack[]
  feat      Features[]
  link      String
 }

 model Img {
  id        Int       @id @default(autoincrement())
  img       String
  project   Project   @relation(fields: [projectId], references: [id])
  projectId Int
 }

  model Stack {
  id        Int       @id @default(autoincrement())
  stack     String
  project   Project   @relation(fields: [projectId], references: [id])
  projectId Int
 }

  model Features {
  id        Int       @id @default(autoincrement())
  feature   String
  project   Project   @relation(fields: [projectId], references: [id])
  projectId Int
 }