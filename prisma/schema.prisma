generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Project {
  id                    Int       @id @default(autoincrement())
  title                 String
  cover_url             String
  description           String
  stacks                Stack[]
  features              Feature[]
  project_link          String
  repo_link             String
 }

  model Stack {
  id        Int       @id @default(autoincrement())
  stack     String
  project   Project   @relation(fields: [projectId], references: [id])
  projectId Int
 }

  model Feature {
  id        Int       @id @default(autoincrement())
  feature   String
  project   Project   @relation(fields: [projectId], references: [id])
  projectId Int
 }